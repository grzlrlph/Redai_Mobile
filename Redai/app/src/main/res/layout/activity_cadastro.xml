    <ImageButton
        android:id="@+id/btnEntrar_LoginActivity"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="15dp"
        android:background= "@drawable/btncadastrar"
        android:text="Entrar"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSenha_LoginActivity" />

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnEntrar_LoginActivity">

        <TextView
            android:id="@+id/textViewTexto_Cadastro"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/btnPossuiConta"
            android:textAlignment="textEnd"
            android:textColor="#131313" />

        <Button
            android:id="@+id/btnCadastrar_LoginActivity"
            android:layout_width="163dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/textViewTexto_Cadastro"
            android:background="@android:color/transparent"
            android:text="@string/btn_entre_aqui"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#FA733E"
            android:contentDescription="BotÃ£o para se redirecionar para a aba de login"/>
    </RelativeLayout>


